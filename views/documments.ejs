<body>

    <%- include('common/nav') %>
    <div  style="padding: 1rem; position: absolute;top:.1rem;right:.5rem">
      
<!-- <i class='fas fa-user-alt' style='font-size:24px'></i> -->
      <!-- <h5 style="color: rgb(78, 72, 72)"><%= user.email %></h5> -->
    </div>
        <div  style="height: 92vh; " class=" d-flex justify-content-between">
            <div id="index" style="height: 92vh;align-items: center;padding: 2rem; background-color: rgba(141, 136, 136, 0.541);border-top: 1px dotted rgba(0, 0, 0, 0.507);;overflow-y: auto;"
                class="col-2">

                <ul> <% if ( user.login == true  ) { %> 
                    <li>
                        <a  style="color: red;" type="button"  data-toggle="modal" data-target="#exampleModal">
                            Add 
                        </a>
                    </li>
                     <% }  %>
                    <br>
                    <% if ( user.docs.length > 0 ) { %> 
                    <% user.docs.forEach((item)=>{ %>
                        <li><a href='#' style="color:
                                black;text-decoration: none;">
                                <%= item.name %>
                            </a></li><br>
                            <% }) } %> 
                        
                </ul>

                <br><br>
                <!-- Button trigger modal -->

            </div>
            
            <div style="height: 87vh;background-color: white; overflow-y: auto; padding-top: 4rem;" class="col">
             
                <div
                   style="border: 2px solid grey;padding: 10px; height: 70vh;width: 90%;margin-left: auto;margin-right: auto; overflow-y: auto;text-align: center;">
                   <a id="index1" style="color: red;" type="button"  data-toggle="modal" data-target="#exampleModal">
                    Add 
                </a>
                   <% if (user.docs.length > 0 ) { %>
                   <% user.docs.forEach((item)=>{ %>
                        
                        <div class="card" style="width: 100%; background-color: rgba(165, 159, 159, 0.445);">
                       <div style="padding:.5rem" class="d-flex justify-content-between "> 
                        <!-- <span style="color:rgba(165, 159, 159, 0.445);" > <i style="cursor: pointer;"  class="fa fa-share-square" aria-hidden="true"></i></span> -->
                        <span style="cursor: pointer;" data-toggle="modal" data-target="#exampleModal<%= item.doc_id %>" class="material-symbols-outlined">
                          share
                          </span>
                            <h6 style="font-family: 'Merriweather', serif;">   <%= item.name %> </h6>
                            <span>
                            
                            <a href='/deletedoc?docid=<%= item.doc_id %>'><span style="color:red;" class="material-icons">
                              delete_forever
                              </span></a>
                            </span>
                             </div>
                            
                            <div class="card-body">
                              <p class="text-muted">
                              <%= item.remark %>
                              </p>
                              <p class="card-text">
                                <a href='/fetchdoc?pathname=<%= item.path %>'>Click here</a>
                                </p>
                              <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
                            </div>
                        </div>
                          <br>

                          <div style="background-color: rgba(196, 186, 186, 0.541);" class="modal fade" id="exampleModal<%= item.doc_id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel<%= item.doc_id %>"
                            aria-hidden="true">
                            <div class="modal-dialog" role="document">
                              <div style="background-color: rgba(154, 207, 185, 0.637);" class="modal-content">
                                <div style="background-color: rgba(141, 136, 136, 0.541);" class="modal-header">
                                  <h5 class="modal-title" id="exampleModalLabel<%= item.doc_id %>">Edit Note</h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                
                                <% user.connection.forEach((item1)=>{ %>
                                 
                                  <div class="d-flex justify-content-around profileContainer">
                                    <div class="allusersprofileimage"
                                      style="background-image:url('uploads/profile_images/<%= item1.image %>') ;background-size: cover;"></div>
                                    <div class="usersdata">
                                      <%= item1.fName %>
                                        <%= item1.lName %>
                      
                                    </div>
                                       <div>
                                        <input type="checkbox" onchange="addShare('<%= item1.cust_id %>')" >
                                       </div>
                                  </div>


                                  

                                 <% }) %>
                                <button class="btn btn-primary"  type="button" onclick="sendShareRequest('<%= item.doc_id %>','<%= user.id %>')" >Share</button>
                              </div>
                            </div>
                          </div>
                          <% }) }
                          else{ %>
                          
                              <h4><%= user.message %></h4>
                              <% if (user.message == 'Login again..' ) { %>
                             <h5> <a style="text-decoration:dotted ;color: blue;" href="/">login</a></h5>
                           
                         <% } } %>
                        
                </div>
            </div>
        </div>


  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      
      <div style="background-color: rgba(196, 186, 186, 0.541);"  class="modal-content">
        <div style="background-color: rgba(154, 207, 185, 0.637);" class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add New Document</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <form action="/adddoc" method="post" enctype="multipart/form-data">
                <div style="text-align: center;" class="form-group">
                 
                  <input type="text" name = "name" class="form-control" aria-describedby="emailHelp" placeholder="Enter document name">
                  </div> <br>
                  <div class="form-group">
                    <input type="text" name="remark" class="form-control"  placeholder="Remark">
                  </div> <br>
                <div class="form-group">
                  <input type="file" name="document" class="form-control"  placeholder="Upload document">
                </div> <br>
                
                  <br>

                
                <button style="background-color: rgba(20, 20, 20, 0.849);color: aliceblue;" type="submit" class="btn btn-sm">Submit</button>
              </form>
        </div>
       
      </div>
    </div>
  </div>
</body>
<style>
    .profileContainer {
    width: 90%;
