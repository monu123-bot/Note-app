<style>
 
  .hide{
    display: none;
  }
  .show{
    display: block;
  }
</style>

<script>
  
  let sharedwithubtn = document.getElementById('sharedwithubtn')
  let sharedbyubtn = document.getElementById('sharedbyubtn')
  let sharedwithme = document.getElementById('sharedwithme')
    
    let sharedbyme = document.getElementById('sharedbyme')


  sharedwithubtn.addEventListener('click',()=>{
    sharedwithme.classList.add('show')
    sharedwithme.classList.remove('hide')
    sharedbyme.classList.remove('show')
    sharedbyme.classList.add('hide')

  })
  sharedbyubtn.addEventListener('click',()=>{
    sharedwithme.classList.add('hide')
    sharedwithme.classList.remove('show')
    sharedbyme.classList.remove('hide')
    sharedbyme.classList.add('show')

  })
 
 
 

</script>