<body>

  <%- include('common/nav') %>
    

    <div class="d-flex flex-column"  style="width: 90vw;margin-left: auto;margin-right: auto;padding: 20px;" >
      <div class="d-flex justify-content-around">
           <button id="sharedwithubtn"  >Shared With You</button> <button id="sharedbyubtn"  >Shared By You</button>
      </div>

      <br>
      <br><br>
      <div class="d-flex justify-content-around">
        <div id="sharedwithme" class="show" style="width: 70vw;" >
          <h4>Shared With Me</h4>
          <% if ( data.sharedlist.length > 0 ) { %> 
            <% data.sharedlist.forEach((item)=>{
              
              if(item.user_id==data.userid & item.user_id != item.cust_id  ){ %>

              <div class="card" style="width: 100%; background-color: rgba(165, 159, 159, 0.445);">
                <div style="padding:.5rem" class="d-flex justify-content-between "> 
                 <!-- <span style="color:rgba(165, 159, 159, 0.445);" > <i style="cursor: pointer;"  class="fa fa-share-square" aria-hidden="true"></i></span> -->
                 <span style="cursor: pointer;" >
                  Owner : <%= item.email %>
                  </span>
                     <h6 style="font-family: 'Merriweather', serif;">   <%= item.name %> </h6>
                     <span>
                     
                     <a href='/deletedoc?docid=<%= item.doc_id %>'><span style="color:red;" class="material-icons">
                       delete_forever
                       </span></a>
                     </span>
                      </div>
                     
                     <div class="card-body">
                       <p class="text-muted">
                       <%= item.remark %>
                       </p>
                       <p class="card-text">
                         <a href='/fetchdoc?pathname=<%= item.path %>'>Click here</a>
                         </p>
                       <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
                     </div>
                 </div>
                 <br><br>


              <% } })}
              else{ %>

      <h4>Nothing shared with you..</h4>
           <%   }
              
              
              %>
        </div>
        <div id="sharedbyme" class="hide" style="width: 70vw;" >

          <h4>Shared By Me</h4>
          <% if ( data.sharedlist.length > 0 ) { %> 
            <% data.sharedlist.forEach((item)=>{
              
              if(item.owner_id==data.userid & item.owner_id != item.cust_id){ %>

              <div class="card" style="width: 100%; background-color: rgba(165, 159, 159, 0.445);">
                <div style="padding:.5rem" class="d-flex justify-content-between "> 
                 <!-- <span style="color:rgba(165, 159, 159, 0.445);" > <i style="cursor: pointer;"  class="fa fa-share-square" aria-hidden="true"></i></span> -->
                 <span style="cursor: pointer;" >
                   Shared to : <%= item.email %>
                   </span>
                     <h6 style="font-family: 'Merriweather', serif;">   <%= item.name %> </h6>
                     <span>
                     
                     <a href='/deletedoc?docid=<%= item.doc_id %>'><span style="color:red;" class="material-icons">
                       delete_forever
                       </span></a>
                     </span>
                      </div>
                     
                     <div class="card-body">
                       <p class="text-muted">
                       <%= item.remark %>
                       </p>
                       <p class="card-text">
                         <a href='/fetchdoc?pathname=<%= item.path %>'>Click here</a>
                         </p>
                       <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
                     </div>
                 </div>
                 <br><br>


              <% } })}
              else{ %>

      <h4>Nothing shared with you..</h4>
           <%   }
              
              
              %>
        </div>
      </div>
    </div>


</body>

