  <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
  <title>notes</title>
</head>

<body>

  <%- include('common/nav') %>
    <div style="padding: 1rem; position: absolute;top:.1rem;right:.5rem">
      
<!-- <i class='fas fa-user-alt' style='font-size:24px'></i> -->
      <!-- <h5 style="color:rgb(78, 72, 72)">
        <%= user.email %>
      </h5> -->
    </div>
    <!-- <h1><%= user.email %></h1> -->
    <div style="height: 94%; " class=" d-flex justify-content-between">
      <div id="index"
        style="height: 92vh; align-items: center;padding: 2rem; background-color: rgba(141, 136, 136, 0.541);border-top: 1px dotted rgba(0, 0, 0, 0.507);overflow-y: auto;"
        class="col-2">

        <ul>
          <% if ( user.login==true ) { %>
            <li>

              <a style="color: red;" type="button" data-toggle="modal" data-target="#exampleModal">
                Add
              </a>
            </li>
            <% } %>
              <br>
              <% if ( user.notes.length> 0 ) { %>
                <% user.notes.forEach((item)=>{ %>
                  <li><a href='#' style="color:
                                black;text-decoration: none;">
                      <%= item.name %>
                    </a></li><br>
                  <% }) } %>

        </ul>

        <br><br>
        <!-- Button trigger modal -->

      </div>

      <div style="height: 87vh;background-color: white; overflow-y: auto; padding-top: 4rem;" class="col">

        <div
          style="border: 2px solid grey;padding: 10px; height: 70vh;width: 90%;margin-left: auto;margin-right: auto; overflow-y: auto;text-align: center;">

          <a id="index1" style="color: red;" type="button" data-toggle="modal" data-target="#exampleModal">
            Add
          </a>
          <% if ( user.notes.length> 0 ) { %>
            <% user.notes.forEach((item)=>{ %>



              <div class="card" style="width: 100%; background-color: rgba(165, 159, 159, 0.445);">

                <div style="padding:.5rem" class="d-flex justify-content-between ">
                  <span data-toggle="modal" data-target="#exampleModal<%= item.note_id %>" style="color:green;cursor: pointer;"
                    class="material-icons">
                    edit_note
                  </span>
                  <div style="background-color: rgba(196, 186, 186, 0.541);" class="modal fade" id="exampleModal<%= item.note_id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel<%= item.note_id %>"
                  aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div style="background-color: rgba(154, 207, 185, 0.637);" class="modal-content">
                      <div style="background-color: rgba(141, 136, 136, 0.541);" class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel<%= item.note_id %>">Edit Note</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <form action="/updatenote?noteid=<%= item.note_id %>" method="post">
                          <div style="text-align: center;" class="form-group">
            
                            <input type="text" name="name" value='<%= item.name %>' class="form-control" aria-describedby="emailHelp"
                              >
                          </div> <br>
                          <div class="form-group">
                            <input type="text" name="title" value='<%= item.title %>' class="form-control" placeholder="New title">
                          </div> <br>
                          <div class="form-group">
                            <input type="text" name="tag" value='<%= item.tag %>' class="form-control" placeholder="New tag">
                          </div><br>
                          <div class="form-group">
                            <textarea type="text" name="description"  class="form-control" placeholder=""><%= item.description %></textarea>
                          </div>
                          <br>
                          <button style="background-color: rgba(19, 18, 18, 0.801);color: aliceblue;" type="submit" class="btn btn-sm">Save Changes</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
                  <h6 style="font-family: 'Merriweather', serif;">
                    <%= item.name %> | <%= item.title %>
                  </h6>
                  <a href="/deletenote?noteid=<%= item.note_id %>"><span style="color:red;" class="material-icons">
                      delete_forever
                    </span> </a>

                </div>

                <div class="card-body">

                  <p class="card-text">
                    <%= item.description %>
                  </p>
                  <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
                </div>
              </div><br>
              <% }) } else{ %>

                <h4>
                  <%= user.message %>
                </h4>
                <% if (user.message=='Login again..' ) { %>
                  <h5> <a style="text-decoration:dotted ;color: blue;" href="/">login</a></h5>

                  <% } } %>

        </div>
      </div>
    </div>



    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div style="background-color: rgba(196, 186, 186, 0.541);"  class="modal-content">
          <div style="background-color: rgba(154, 207, 185, 0.637);" class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add New Chapter</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/addnote" method="post">
              <div style="text-align: center;" class="form-group">
                <input type="text" name="name" class="form-control" aria-describedby="emailHelp"
                  placeholder="Enter chapter name">
              </div> <br>
              <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Enter title">
              </div> <br>
              <div class="form-group">
                <input type="text" name="tag" class="form-control" placeholder="Enter tag">
              </div><br>
              <div class="form-group">
                <textarea type="text" name="description" class="form-control"
                  placeholder="Enter description"></textarea>
              </div>
              <br>
              <button type="submit" style="background-color: rgba(19, 18, 18, 0.801);color: aliceblue;" type="submit" class="btn btn-sm">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
   
</body>
<style>
  @media only screen and (max-width: 700px) {
    #index {
      display: none;
    }

    #index1 {
      display: block;
    }
  }

  @media only screen and (min-width: 700px) {

    #index1 {
      display: none;
    }
  }

</style>


