<script>
  var sharelist = new Set()

  const addShare = (id)=>{
    if (sharelist.has(id)){
      sharelist.delete(id)
    }
    else{
      sharelist.add(id)
    }
    console.log(sharelist)
  }

  const sendShareRequest =async (doc_id,owner_id)=>{
    

    const res = await fetch("/sharedoc", {
        method: "POST",
        body: JSON.stringify({
          owner:owner_id,
          document_id:doc_id,
          list:Array.from(sharelist)
        }),
        
        headers: { "Content-Type": "application/json" },
      });

      
      console.log(res)

    
      sharelist.clear()
  }

</script>
